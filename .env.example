# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=BGS Geb√§udeservice

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/bgs_db?schema=public"
DIRECT_URL="postgresql://user:password@localhost:5432/bgs_db?schema=public"

# Email Configuration (SMTP - Legacy)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@bgs-service.de
CONTACT_EMAIL=info@bgs-service.de

# Email Configuration (Resend/SendGrid - New API)
EMAIL_PROVIDER="resend" # or "sendgrid"
EMAIL_API_KEY="your-api-key-here"
EMAIL_FROM="noreply@bgs-gebaeudeservice.de"
EMAIL_TO="info@bgs-gebaeudeservice.de"

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_GTM_ID=

# Sentry Error Tracking (Optional)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Feature Flags
NEXT_PUBLIC_ENABLE_BOOKING=true
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=false

# Security
SECRET_KEY=your-secret-key-here-min-32-chars
JWT_SECRET=your-jwt-secret-here

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
